{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "target": "es2015",
        "lib": [
            "es2017"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "inlineSourceMap": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "skipLibCheck": true,
        "strict": true,
        "traceResolution": false,
        "importHelpers": false,
        "strictPropertyInitialization": true,
        "noUnusedLocals": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
